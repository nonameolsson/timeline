{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "app",
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "paths": {
      "config/*": ["./config/*"],
      "theme/*": ["./theme/*"],
      "models/*": ["./models/*"],
      "navigation/*": ["./navigation/*"],
      "screens/*": ["./screens/*"],
      "services/*": ["./services/*"],
      "utils/*": ["./utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "app", "test", "storybook"]
}
