{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "app",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true
  },
  "paths": {
    "config/*": ["./config/*"],
    "components/*": ["./components/*"],
    "theme/*": ["./theme/*"],
    "models/*": ["./models/*"],
    "navigators/*": ["./navigators/*"],
    "screens/*": ["./screens/*"],
    "services/*": ["./services/*"],
    "utils/*": ["./utils/*"]
  },
  "exclude": ["node_modules"],
  "include": ["App.js", "app", "test", "storybook"]
}
